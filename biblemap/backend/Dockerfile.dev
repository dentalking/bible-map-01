FROM node:20-alpine

WORKDIR /app

# Install dependencies for better development experience
RUN apk add --no-cache git python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy prisma schema
COPY prisma ./prisma

# Generate Prisma client
RUN npx prisma generate

# Copy the rest of the application
COPY . .

# Expose port
EXPOSE 4000

# Development command
CMD ["npm", "run", "dev"]